.markdown-body > table {
    display: table !important;
    width: auto !important;
    max-width: 65em;
    border: 1px solid #dedede;
    margin: 15px auto;
    border-collapse: collapse;
    empty-cells: show;
}

.markdown-body > table th,
.markdown-body > table td {
  height: 25px;
  font-size: 10px;
  border: 1px solid #dedede;
  padding: 0 6px !important;
}

.markdown-body > table th {
    font-size: 10px;
    font-weight: bold;
    text-align: center !important;
    background: rgba(158,188,226,0.2);
}

.markdown-body > table th {
    white-space: nowrap;
}

.markdown-body > table tr:hover {
    color: black;
    background: #efefef;
}

html[color-mode="dark"] .markdown-body > table tr:hover {
    color: white;
    background: #333;
}

:is(.markdown-body p) span[style^="background:#"] {
    color: black;
}